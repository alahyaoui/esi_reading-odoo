<?xml version="1.0"?>
<odoo>

	<record model="ir.actions.act_window" id="action_reading_book">
        <field name="name">Livres</field>
        <field name="res_model">reading.book</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem id="menu_reading_book" name="Livres"/>

    <menuitem id="reading_book_menu" 
        name="Livres" 
        parent="menu_reading_book" />

    <menuitem id="reading_menu" 
        name="Livres" 
        parent="reading_book_menu" 
        action="action_reading_book" />
    
    <record model="ir.actions.act_window" id="auteurs_list_action">
        <field name="name">Partenaires-Auteurs</field>
        <field name="res_model">res.partner</field>
        <field name="view_mode">tree,form,graph</field>
        <field name="context">{"search_default_filter_authors":1}</field>
    </record>
    
    <menuitem id="autheur_menu" name="Auteurs" parent="menu_reading_book" />
    
    <menuitem id="auteur_partenaire_menu" name="Partenaires-Auteurs" parent="autheur_menu" action="auteurs_list_action" />

</odoo>